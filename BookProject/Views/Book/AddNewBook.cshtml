			</select>
		</div>*@
		
		<br />
		<div class="align-content-lg-center">
			<center><button class="btn btn-success">Add Book</button></center>
		</div>
		<br />
		<hr />

	</form>
</div>

@section Scripts{
	<script>
		function myComplete(){
			alert("Completed");
		}
		
		function mySuccess(){
			alert("Succeed");
		}
		
		function myFailure(){
			alert("Failed");
		}
	</script>
}
