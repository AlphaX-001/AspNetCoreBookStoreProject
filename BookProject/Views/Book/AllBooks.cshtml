@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "All Books";
}
<div class="py-5 bg-light">
<div class="container">
    <div class="row">
        <h1 class="display-4 ">All Books</h1>
        <hr />
        @{int i=0;}
        @foreach(var books in Model)
        {
                i++;
                @if(i>4)
                {
                    i = 1;
                }
                <div class="col-md-4">
                  <div class="card mb-4 shadow-sm">
                      <img src="~/images/bk@(i).jpeg" height="400"alt="Image"/>
                      
                      <div class="card-body downnav">
                          <h4 class="card-text">@books.Title</h4>
                          <p class="card-texr">@books.Description</p>
                          <div class="d-flex justify-content-between align-items-center">                            
                              <div class="btn-group">
                                  <a a asp-route="bookDetails" asp-route-id="@books.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                              </div>
                              <small class="text-muted">Author: @books.Author</small>
                          </div>
                      </div>
                  </div>
           </div>
        }
    </div>
</div>
</div>
